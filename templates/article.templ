package templates

import "github.com/sidereusnuntius/gowiki/internal/domain"

templ Article(local bool, article domain.ArticleFed) {
    
    if !local {
        {{ at := "@" + article.Author + "@" + article.Host }}
        <a href={"/" + at }>{ at }</a>
    }
    <article>
        <!--
            The article's content must have been sanitized before rendering the template.
            Perhaps we should do it here, in the template?
        -->
        @templ.Raw(article.Content)
    </article>
}